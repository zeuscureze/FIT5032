{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./lib",
    "sourceMap": true
  },
  "include": [
    "src/**/*",   // 这可能没有包含 functions 文件夹中的其他文件
    "index.js",   // 确保 functions 文件夹中的 index.js 被包含
    "functions/*" // 也包括 functions 文件夹中的所有文件
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}

